{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-md-1">&nbsp;</div>
		<div class="col-md-10"
			style="height: 350px; background: url('{{ asset("build/images/homepage_1024x341.jpg") }}') no-repeat center center; background-size: cover; padding: 0px;">
			<nav class="navbar navbar-default navbar-fixed-top" id="mainNav">
				<ul class="navbar-nav nav">
					<li><a href="#">Home</a></li>
					<li><a href="#">Recipes</a></li>
				</ul>
			</nav>
			<div class="text-center" style="height: 300px;">			
				<input style="position: relative; top: 20%; width: 40%; opacity: 0.9;" type="text" name="search" placeholder="{{ 'homepage.search.placeholder' | trans}}" />
			</div>			
		</div>
		<div class="col-md-1">&nbsp;</div>
	</div>
	<div class="row">
		<div class="col-md-1">&nbsp;</div>
		<div class="col-md-10 text-center h3">Parsley & Chives</div>
		<div class="col-md-1">&nbsp;</div>
	</div>
	<div class="row">
		<div class="col-md-2">&nbsp;</div>
		
		{% for r in recipes %}
		<div class="col-md-2" style="margin: 5px;">
			<figure class="figure">
				<img class="img-responsive figure-img rounded" src="{{ asset('build/images/pancake_caviar_300x200.jpg') }}" alt="{{ recipe.imageName }}" />
				<figcaption class="figure-caption text-center" style="background-color: #DDD;">{{ r.getTitle() }}</figcaption>
			</figure>			
		</div>
		{% else %}
		<div class="col-md-8 text-center">{{ 'homepage.no_recipes_found' | trans }}</div>
		{% endfor %}		
		<div class="col-md-2">&nbsp;</div>
	</div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('build/app.js') }}"></script>
{% endblock %}
